@model NWEB.Practice.T01.Web.Areas.Admin.ViewModel.SaleOfViewModel

@{
    ViewBag.Title = "CreateSaleOff";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CreateSaleOff</h2>


@using (Html.BeginForm("CreateSaleOff","Flower",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
